# =====================
# Ambiente Local - Exemplo
# Copie este arquivo para `.env` e preencha os valores.
# NÃO comite o arquivo `.env` com segredos reais no repositório.
# =====================
PORT=3000
JWT_SECRET=your_jwt_secret_here
NODE_ENV=development

# Postgres Local (exemplo)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=appdb

# Postgres Neon (exemplo)
# Descomente e preencha se for usar Neon/DBaaS
# POSTGRES_HOST=ep-noisy-frost-acregz6v-pooler.sa-east-1.aws.neon.tech
# POSTGRES_PORT=5432
# POSTGRES_USER=neondb_owner
# POSTGRES_PASSWORD=npg_xxx
# POSTGRES_DB=neondb

# TypeORM / App
TYPEORM_SYNCHRONIZE=true
TYPEORM_LOGGING=false
POSTGRES_POOL_SIZE=10
PGADMIN_PORT=8080
ADMINER_PORT=8080
